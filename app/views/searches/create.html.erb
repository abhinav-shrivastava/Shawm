<% provide(:title, 'Search Results') %>
<h1>Similar Results</h1>

<div class="row">
  <div class="col-md-8">
    <% @matching_artists.first(10).each do |artist| %>
      <div class="row">
        <div class="col-md-4">
          <div class="thumbnail">
          <a href="<%= artist['url']%>" target="_blank">
            <img src="<%= artist['image'][-2]['#text']%>" class="img-thumbnail">
            <div class="caption">
              <%= artist['name'] %>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
